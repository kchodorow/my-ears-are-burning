<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>com.meab.StartupRegistrar</listener-class>
    </listener>

    <servlet>
        <servlet-name>tmpl</servlet-name>
        <servlet-class>com.meab.ui.UiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>oauth</servlet-name>
        <servlet-class>com.meab.oauth.GitHubServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>token</servlet-name>
        <servlet-class>com.meab.oauth.AccessTokenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.meab.oauth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>notifications</servlet-name>
        <servlet-class>com.meab.api.NotificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>repositories</servlet-name>
        <servlet-class>com.meab.api.RepositoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subscribe</servlet-name>
        <servlet-class>com.meab.subscriptions.SubscribeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>unsubscribe</servlet-name>
        <servlet-class>com.meab.subscriptions.UnsubscribeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.meab.oauth.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tmpl</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tmpl</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tmpl</servlet-name>
        <url-pattern>/privacy-policy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tmpl</servlet-name>
        <url-pattern>/thank-you</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tmpl</servlet-name>
        <url-pattern>/good-bye</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>oauth</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>token</servlet-name>
        <url-pattern>/github</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notifications</servlet-name>
        <url-pattern>/api/notifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>repositories</servlet-name>
        <url-pattern>/api/repositories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>unsubscribe</servlet-name>
        <url-pattern>/unsubscribe</url-pattern>
    </servlet-mapping>
</web-app>
